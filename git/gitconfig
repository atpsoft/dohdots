[core]
  excludesfile = ~/.gitignore
  quotepath = false
  autocrlf = input
[difftool]
  prompt = false
[branch]
  autosetuprebase = always
[Alias]
  ci = commit
  co = checkout
  d = diff
  dt = difftool
  dts = difftool --staged
  pl = pull -v --log --stat
  pp = !git pull -v --log --stat && git push
  st = status
  unci = reset --soft HEAD^
